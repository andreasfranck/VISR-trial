[build-system]
requires = [ "build", "wheel", "setuptools" ]
build-backend = "setuptools.build_meta"

[project]
name = "VISR"
version = "0.13.0" # TODO: Fill in via CMake configure
description = "VISR audio rendering framework"
readme = "Readme.md" # TODO: Point to VISR/Readme.md
requires-python = ">=3.7"
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: ISC License",
    "Operating System :: Windows, Linux, MacOS",
]

