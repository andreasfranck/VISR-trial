[build-system]
requires = [ "build", "wheel", "setuptools" ]
build-backend = "setuptools.build_meta"

[project]
name = "visr"
authors = [ { name = "Andreas Franck", email = "andreas.franck@audioscenic.com" }, { name = "VISR contributors"} ]
version = "@VISR_VERSION@"
description = "VISR audio rendering framework"
license = { text = "ISC" }
readme = "Readme.md"
requires-python = ">=3.7"
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: ISC License",
    "Operating System :: Windows, Linux, MacOS",
]

